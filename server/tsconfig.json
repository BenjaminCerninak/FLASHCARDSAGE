{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server/src/**/*.ts",  // Všechny TypeScript soubory ve složce server
    "client/src/**/*.ts"   // Všechny TypeScript soubory ve složce client
  ],
  "exclude": [
    "node_modules"
  ]
}
